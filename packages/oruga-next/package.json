{
  "name": "@oruga-ui/oruga-next",
  "version": "0.6.0",
  "homepage": "https://oruga.io",
  "description": "UI components for Vue.js and CSS framework agnostic",
  "author": "Walter Tommasi <tommsi20@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "unpkg": "dist/oruga.min.js",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./*": "./*"
  },
  "files": [
    "dist",
    "src",
    "nuxt",
    "types/*.d.ts",
    "README.md"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oruga-ui/oruga.git"
  },
  "bugs": {
    "url": "https://github.com/oruga-ui/oruga/issues"
  },
  "scripts": {
    "build:vue": "rollup -c",
    "build:vue:watch": "rollup -c --watch",
    "build:lib": "rimraf dist && npm run test:ts && npm run build:vue && npm run build:types",
    "build:lib:watch": "npm link &&  \"npm run build:vue:watch\"",
    "build:types": "vue-tsc -d --emitDeclarationOnly --declarationDir dist/types --declaration true",
    "publish:lib": "cp ../../README.md . && npm run build:lib && npm publish",
    "test": "rm -rf .nyc_output coverage && NODE_ENV=test cypress run --component",
    "test:ts": "vue-tsc --noEmit --skipLibCheck",
    "test:watch": "rm -rf .nyc_output coverage && NODE_ENV=test cypress open --component",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --quiet --ignore-path .gitignore",
    "update": "ncu -u"
  },
  "keywords": [
    "oruga",
    "vue",
    "vuejs",
    "components",
    "ux",
    "ui",
    "css",
    "agnostic",
    "framework"
  ],
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.17",
    "@babel/preset-env": "7.22.15",
    "@cypress/code-coverage": "^3.12.1",
    "@cypress/vite-dev-server": "^5.0.6",
    "@cypress/vue": "^6.0.0",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "25.0.4",
    "@rollup/plugin-node-resolve": "15.2.1",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "11.1.3",
    "@types/jest": "29.5.4",
    "@types/node": "^20.6.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/server-renderer": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "babel-plugin-istanbul": "^6.1.1",
    "codecov": "3.8.2",
    "core-js": "3.32.2",
    "cypress": "^13.2.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.17.0",
    "eslint-plugin-vuejs-accessibility": "^2.2.0",
    "jest-serializer-vue": "3.1.0",
    "npm-check-updates": "^16.14.2",
    "prettier": "^3.0.3",
    "rollup": "^3.29.1",
    "rollup-copy-plugin": "0.1.0",
    "rollup-plugin-eslint": "7.0.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "rollup-plugin-vue": "6.0.0",
    "sass": "1.67.0",
    "sinon": "16.0.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-istanbul": "^5.0.0",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.11"
  },
  "nyc": {
    "all": true,
    "include": "src/**/*.vue",
    "reporter": [
      "text",
      "json",
      "html"
    ]
  }
}
